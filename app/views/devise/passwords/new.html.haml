= content_for :title, "Olvidó su contraseña?"

= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
  = f.error_messages

  %p
    = f.label :email
    %br/
    = f.email_field :email

  %p= f.submit "Enviar instrucciones para el cambio de contraseña"

= render "devise/shared/links"
