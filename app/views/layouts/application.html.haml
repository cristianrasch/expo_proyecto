!!! 5
%html
  %head
    %title ExpoProyecto
    = stylesheet_link_tag 'application', 'fg.menu', 'ui.core', 'ui.theme'
    = yield :styles
    = csrf_meta_tag
  %body
    #wrapper
      = render 'shared/menu'
      /
        <div id="header">
        <div id="logo">
        <h1><a href="#">Green Forest   </a></h1>
        <p> design by <a href="http://www.freecsstemplates.org/">Free CSS Templates</a></p>
        </div>
        </div>
      / end #header
      #page
        #page-bgtop
          #page-bgbtm
            #content
              .post
                %h2.title= yield(:title)
                - unless flash.empty?
                  %p.meta
                    %span.date= flash.first.last
                %div{:style => "clear: both;"} &nbsp;
                .entry
                  = yield
                  / %p.links <a href="#">Read More</a>&nbsp;&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;&nbsp;<a href="#">Comments</a>
              / %div{:style => "clear: both;"} &nbsp;
            / end #content
            = render "shared/sidebar"
            %div{:style => "clear: both;"} &nbsp;
      / end #page
    #footer
      %p Copyright (c) #{Date.today.year} #{link_to('LACIE', 'http://lacie-unlam.org/')}. Todos los derechos reservados. Dise√±o por <a href="http://www.freecsstemplates.org/">Free CSS Templates</a>
    / end #footer
    
    = javascript_include_tag :defaults, 'fg.menu'
    = yield :js
